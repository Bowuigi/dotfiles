path = (/bin /sbin /usr/bin /usr/sbin /usr/local/sbin /usr/local/sbin $HOME/bin)
EDITOR = nvim
PAGER = less

red = `{color red}
green = `{color green}
blue = `{color blue}
cyan = `{color cyan}
normal = `{color normal}
bold = `{color bold}

fn m { $EDITOR $* }
fn p { $PAGER $* }

fn gs { git status }
fn ga { git add $* }
fn gc { git commit }
fn gp { git push }
fn gP { git pull }

fn config { m ~/.esrc && . ~/.esrc }

fn l {
	ls '--color=auto' -SAhs $*
}

fn cleanpwd {
	pwd | sed 's#'^$HOME^'#~#gi'
}

fn Ã± { clear }

fn %prompt {
	prompt = ($green^$bold^[$bqstatus]^$normal^' -> '^$blue^`{cleanpwd}^$normal^\n^'> '^$bold '> ')
}
